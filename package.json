{
  "name": "confucius",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc -b && vite build",
    "postbuild": "npm run prerender",
    "prerender": "shx cp -r build/. snap-build/ && react-snap",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "npm install && npm run build && shx mkdir -p snap-build && shx mkdir -p snap-snapshot",
    "deploy:dev": "npm run deploy && shx cp src/assets/original/robots-dev.txt build/robots.txt && shx cp src/assets/original/robots-dev.txt snap-build/robots.txt",
    "deploy:prod": "npm run deploy && shx cp src/assets/original/robots-prod.txt build/robots.txt && shx cp src/assets/original/robots-prod.txt snap-build/robots.txt"
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.6",
    "@headlessui/react": "^1.7.19",
    "he": "^1.2.0",
    "i18next": "^23.12.2",
    "i18next-http-backend": "^2.5.2",
    "libphonenumber-js": "^1.11.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-ga4": "^2.1.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.0.0",
    "react-icons": "^5.2.1",
    "react-international-phone": "^4.0.4",
    "react-router-dom": "^6.24.1",
    "react-toastify": "^10.0.5",
    "swiper": "^11.1.4",
    "usehooks-ts": "^3.1.0",
    "web-vitals": "^2.1.0",
    "yup": "^1.3.2",
    "yup-phone-lite": "^2.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.3.1",
    "@types/he": "^1.2.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-legacy": "^5.4.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.39",
    "react-snap": "^1.23.0",
    "shx": "^0.3.4",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vitest": "^2.0.1"
  },
  "reactSnap": {
    "source": "build",
    "destination": "snap-build",
    "skipThirdPartyRequests": true,
    "port": 3001,
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  }
}
